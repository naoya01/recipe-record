<% if cooking.favorited_by?(current_user) %>
  <p>
  <%= link_to cooking_favorites_path(cooking.id), method: :delete do %>
    <i class="far fa-star"></i>外す
  <% end %>
  </p>
  <% else %>
  <p>
  <%= link_to cooking_favorites_path(cooking.id), method: :post do %>
    お気に入りに入れる
  <% end %>
  </p>
<% end %>