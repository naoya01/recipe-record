<% cookings.each do |cooking| %>
  <div class="meals-show_container">
    <div class="meals-show_container_row meals-show_container_title">
      <span class="meals-show_container_row_title"><%= cooking.cooking_name %></span>
      <span class="meals-show_container_row_favorite">
        <div class="favorite-btn_<%= cooking.id %>">
          <%= render "favorites/index", cooking: cooking %>
        </div>
      </span>
    </div>
    <div class="meals-show_container_row">
      <ul class="meals-show_container_row_content">
        <% cooking.genres.each do |genre| %>
        <li class="meals-show_container_row_content_list">
          <%= link_to genre_path(genre.id) do %>
            <div class="meals-show_container_row_content_list_anchor">
              <i class="fas fa-circle"></i>
              <span><%= genre.genre_name %></span>
            </div>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="meals-show_container_row">
        <a class="meals-show_container_row_url" href="<%= cooking.url %>">ページを見に行く</a>
    </div>
  </div>
<% end %>