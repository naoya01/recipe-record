<%= form_with(model: meal, local: true) do |form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% meal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :meal_description %>
    <%= form.text_area :meal_description %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="form-inline text-left">
   <%= form.label :start_date,"開始時刻", {class:'control-label'}%>
   <%= form.datetime_select :start_date, {default: Date.today + 0.hours + 00.minutes, minute_step: 60}, class: 'form-control' %>
  </div>
  <br>
  <div class="form-inline text-left">
   <%= form.label :end_date,"終了時刻", {class:'control-label'}%>
   <%= form.datetime_select :end_date, {default: Date.today + 0.hours + 00.minutes, minute_step: 60}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :mealtime %>
    <%= form.select :mealtime, [['朝', '朝'], ['昼', '昼'], ['夜','夜']], {class: "user_class" } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


  <table class="cooking-new_table">
    <tr>
      <th>料理名</th>
      <td><input type="text"></td>
    </tr>
    <tr>
      <th>日時</th>
      <td><input type="text"></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td><input type="text"></td>
    </tr>
    <tr class="cooking-new_table_ingredients">
      <th>材料</th>
      <td class="cooking-new_table_ingredients_contents"><input type="date"></input>
        <select name="choice" class="cooking-new_table_ingredients_quantity">
          <option value="first">朝</option>
          <option value="second" selected>昼</option>
          <option value="third">夜</option>
        </select></td>
    </tr>
    <tr class="cooking-new_table_ingredients_add_btn"><td>材料追加</td></tr>
  </table>
