<div class="l-main_container flex">

  <aside class="m-side">
    <ul class="m-side_list">
      <span class="m-side_title">作った日</span>
      <li class="m-side_list_item">
        <a class="m-side_list_item_anchor" href="">2021/10/11</a>
      </li>
      <li class="m-side_list_item">
        <a class="m-side_list_item_anchor" href="">2021/10/12</a>
      </li>
      <li class="m-side_list_item">
        <a class="m-side_list_item_anchor" href="">2021/10/23</a>
      </li>
      <li class="m-side_list_item">
        <a class="m-side_list_item_anchor" href="">2021/12/11</a>
      </li>
        <a class="m-side_list_item_anchor_other" href="">もっと見る</a>
    </ul>
  </aside>

  <article class="m-article">
    <div class="m-title_flex">
      <h2 class="m-title"><%= @post.post_name %></h2>
      <div class="m-title_other">
        <%= link_to "編集" , edit_post_path(@post.id) %>
        <%= link_to "削除" , post_path(@post.id),method: :delete, data: {confirm: '本当に消しますか？'} %>
    </div>
    </div>

    <div class="cooking-show_column">
      <div class="cooking-show_column_image">
        <%= attachment_image_tag(@post, :post_image, :fill, 400, 300) %>

      </div>
      <div class="cooking-show_column_contents">
        <p class="cooking-show_column_contents_explanation">
          <%= @post.post_description %>
        </p>
        <table class="cooking-show_column_contents_spices">
          <h3 class="cooking-show_column_contents_title">調味料</h3>
          <% @post.flavors.each do |flavor| %>
            <tr>
              <td class="cooking-show_column_contents_spices_name"><%= flavor.flavor_name %></td>
              <td class="cooking-show_column_contents_spices_quantity"><%= flavor.flavor_quantity %></td>
            </tr>
          <% end %>
        </table>

        <table class="cooking-show_column_contents_spices">
          <h3 class="cooking-show_column_contents_title">材料</h3>
          <% @post.foodstuffs.each do |foodstuff| %>
            <tr>
              <td class="cooking-show_column_contents_spices_name"><%= foodstuff.foodstuff_name %></td>
              <td class="cooking-show_column_contents_spices_quantity"><%= foodstuff.foodstuff_quantity %></td>
            </tr>
          <% end %>
        </table>

      </div>
    </div>

    <div class="cooking-show_process">
      <h3 class="m-title_section">手順</h3>
      <ol class="cooking-show_process_list">
        <% @post.recipes.each do |recipe| %>
          <li class="cooking-show_process_list_item">
            <span class="cooking-show_process_list_item_number"></span>
            <p class="cooking-show_process_list_item_text">
              <%= recipe.recipe_description %>
            </p>
            <div class="cooking-show_process_list_item_image">
              <%= attachment_image_tag(recipe, :recipe_image, :fill, 300, 200) %>

            </div>
          </li>
        <% end %>
      </ol>
    </div>

  </article>
</div>