<% genres.each do |genre| %>
  <li class="genre-index_list_item">
    <%= link_to genre_path(genre.id) do %>
      <%= genre.genre_name %>
    <% end %>
    <% if user_signed_in? %>
      <% if current_user == @user || current_user.admin? %><%# 管理者のみ表示  %>
        <%= link_to edit_genre_path(genre.id) do %>
          <i class="fas fa-cog"></i>
        <% end %>
      <% end %>
    <% end %>
  </li>
<% end %>