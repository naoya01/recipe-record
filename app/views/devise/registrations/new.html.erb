<div class="l-main_container">
  <div class="m-title_flex">
    <h2 class="m-title">新規登録</h2>
    <span>ログインは<%= link_to 'こちら', new_user_session_path %></span>

  </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <table class="login-table">
      <tr>
        <th>ユーザーネーム</th>
        <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th>パスワード(6字以上)</th>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th>確認パスワード</th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </table>
    <%= f.submit "登録", class:"btn-login" %>
  <% end %>
</div>
